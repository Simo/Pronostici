<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Pronostici" %></title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js", "jquery.rails.js" %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>
<body>
	
	<div id="wrapper">
		<div id="header">
			
		</div> <!-- fine header -->
		
		<div id="avvisi">
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>
		</div><!-- fine avvisi -->
		<!--
		<div id="user_nav">  
		  <% if user_signed_in? %>  
		    Connesso come <%= current_user.username %>. Non sei tu?  
		    <%= link_to "Sign out", destroy_user_session_path %>  
		  <% else %>  
		    <%= link_to "Sign up", new_user_registration_path %> or  
		    <%= link_to "Sign in", new_user_session_path %>  
		  <% end %>  
		</div>
		-->
		<div id="container">
			<%= yield %>
		</div>
		
		<div class="separa">
		</div>
		<div id="footer">
			<% unless user_signed_in? %>
				<% if @authentications %>
				  <% unless @authentications.empty? %>
				    <p><strong>You can sign in to this account using:</strong></p>
				    <div class="authentications">
				      <% for authentication in @authentications %>
				        <div class="authentication">
				          <%= image_tag "#{authentication.provider}_32.png", :size => "32x32" %>
				          <div class="provider"><%= authentication.provider.titleize %></div>
				          <div class="uid"><%= authentication.uid %></div>
				          <%= link_to "X", authentication, :confirm => 'Are you sure you want to remove this authentication option?', :method => :delete, :class => "remove" %>
				        </div>
				      <% end %>
				      <div class="clear"></div>
				    </div>
				  <% end %>
				  <p><strong>Add another service to sign in with:</strong></p>
				<% else %>
				  <p><strong>Sign in through one of these services:</strong></p>
				<% end %>
			
				<a href="/auth/twitter" class="auth_provider">
				  <%= image_tag "twitter.png", :size => "82x82", :alt => "Twitter" %>
				</a>
				<a href="/auth/facebook" class="auth_provider">
				  <%= image_tag "facebook.png", :size => "82x82", :alt => "Facebook" %>
				</a>
				<a href="/auth/google_apps" class="auth_provider">
				  <%= image_tag "google.png", :size => "82x82", :alt => "Google" %>
				</a>
				<!-- ><a href="/auth/open_id" class="auth_provider">
				  <%= image_tag "openid_64.png", :size => "32x32", :alt => "OpenID" %>
				  OpenID
				</a> -->
				<div class="clear"></div>
				<% end %>
		</div>
	</div><!-- fine wrapper -->
